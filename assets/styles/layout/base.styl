*,
*:before,
*:after
  box-sizing: inherit

html,
body,
main
  height: 100%
  width: 100%

html
  box-sizing: border-box

body
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  background-color: $color-shade
  color: white
  font-family: 'effra', 'Franklin Gothic', 'ITC Franklin Gothic', Helvetica, Arial, "Lucida Grande", sans-serif
  font-smoothing: always
  text-rendering: optimizeLegibility

.content-wrap
  height: 100%
  padding: 25px
  position: relative
  width: 100%
  z-index: 1

.content,
.content-inner
  position: relative
  width: 100%

.content-inner
  height: 100%
  padding: 25px

.content
  padding: 0 100px
  position: relative
  top: 48%
  transform: translateY(-50%)

.pane
  animation-name: animatePane
  animation-duration: 1.1s
  animation-fill-mode: forwards
  background: $color-pane
  height: 100%
  position: absolute
  top: 0
  transform-origin: 50% 0 0
  transform: scale(1, 0)
  width: 25%
  z-index: -1
  &.alpha
    animation-delay: .2s
    left: 0
  &.beta
    left: 25%
  &.gamma
    animation-delay: .12s
    left: 50%
  &.delta
    animation-delay: .23s
    left: 75%

h1
  animation-delay: 1s
  animation-duration: .3s
  animation-fill-mode: forwards
  animation-name: animateTitle
  animation-timing-function: ease
  color: $color-primary
  font-size: 18px
  font-weight: 700
  text-transform: uppercase
  transform: translate3d(0, -1.75em, 0)

h2
  animation-delay: 1.35s
  animation-duration: .6s
  animation-fill-mode: forwards
  animation-name: animateTitle
  animation-timing-function: ease
  font-size: 36px
  font-weight: 900
  margin-top: 0
  max-width: 500px
  transform: translate3d(0, -5em, 0)

.social-list
  list-style: none
  margin: 40px 0 0
  padding: 0

.social-item
  animation-duration: .5s
  animation-fill-mode: forwards
  animation-name: animateLink
  animation-timing-function: ease-in
  display: inline-block
  margin-right: 20px
  transform: translate3d(0, -1.75em, 0)
  &:last-child
    margin: 0
  &:nth-child(1)
    animation-delay: 1.50s
  &:nth-child(2)
    animation-delay: 1.65s
  &:nth-child(3)
    animation-delay: 1.80s
  &:nth-child(4)
    animation-delay: 1.95s
  a
    color: $color-tint
    display: inline-block
    font-size: 18px
    font-weight: 700
    text-decoration: none
    text-transform: uppercase
    position: relative
    &:hover
      color: lighten($color-tint, 30%)
      transition: color .15s linear

.word-wrap
  overflow: hidden
