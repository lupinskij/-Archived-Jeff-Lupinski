*,
*:before,
*:after
  box-sizing: inherit

html,
body
  height: 100%
  width: 100%

html
  box-sizing: border-box

body
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  background-color: #303939
  color: white
  font-family: 'effra', sans-serif
  font-smoothing: always
  text-rendering: optimizeLegibility

.content-wrap
  bottom: 0
  height: 100%
  left: 0
  margin: auto
  position: fixed
  right: 0
  top: 0
  width: 100%
  z-index: 99

.content-bg
  height: 100%
  height: 100%
  padding: 25px
  position: relative
  width: 100%
  z-index: 1

.content,
.content-inner
  position: relative
  width: 100%

.content-inner
  height: 100%
  padding: 25px

.content
  padding: 0 100px
  position: relative
  top: 48%
  transform: translateY(-50%)

.pane
  animation-name: animatePane
  animation-duration: 1.25s
  animation-fill-mode: forwards
  background: #172222
  height: 100%
  position: absolute
  top: 0
  transform-origin: 50% 0 0
  transform: scale(1, 0)
  width: 25%
  z-index: -1
  &.alpha
    animation-delay: .2s
    left: 0
  &.beta
    left: 25%
  &.gamma
    animation-delay: .12s
    left: 50%
  &.delta
    animation-delay: .23s
    left: 75%

h1
  animation-delay: 1.15s
  animation-duration: .25s
  animation-fill-mode: forwards
  animation-name: animateTitle
  color: #00de6e
  font-size: 18px
  font-weight: 700
  text-transform: uppercase
  transform: translate3d(0, -1.75em, 0)

h2
  animation-delay: 1.55s
  animation-duration: .6s
  animation-fill-mode: forwards
  animation-name: animateTitle
  font-size: 36px
  font-weight: 900
  margin-top: 0
  max-width: 500px
  transform: translate3d(0, -5em, 0)

.social-list
  list-style: none
  margin: 40px 0 0
  padding: 0

.social-item
  animation-duration: .5s
  animation-fill-mode: forwards
  animation-name: animateLink
  display: inline-block
  margin-right: 20px
  transform: translate3d(0, -1.75em, 0)
  &:last-child
    margin: 0
  &:nth-child(1)
    animation-delay: 1.75s
  &:nth-child(2)
    animation-delay: 1.85s
  &:nth-child(3)
    animation-delay: 1.95s
  &:nth-child(4)
    animation-delay: 2.05s
  a
    color: #a4aaab
    display: inline-block
    font-size: 18px
    font-weight: 700
    text-decoration: none
    text-transform: uppercase
    position: relative

.word-wrap
  overflow: hidden
