*,
*:before,
*:after
  box-sizing: inherit

html,
body,
main
  height: 100%
  width: 100%

html
  box-sizing: border-box

body
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  background-color: $color-shade
  color: white
  font-family: 'effra', 'Franklin Gothic', 'ITC Franklin Gothic', Helvetica, Arial, "Lucida Grande", sans-serif
  font-smoothing: always
  text-rendering: optimizeLegibility

.content-wrap
  height: 100%
  padding: 15px
  position: relative
  width: 100%
  z-index: 1
  @media (min-width: $screen-medium)
    padding: 25px

.content,
.content-inner
  position: relative
  width: 100%

.content-inner
  height: 100%
  padding: 25px

.content
  position: relative
  top: 48%
  transform: translateY(-50%)
  @media (min-width: $screen-medium)
    padding: 0 100px

.pane
  animation-name: animatePane
  animation-duration: 1.1s
  animation-fill-mode: forwards
  background: $color-pane
  height: 100%
  position: absolute
  top: 0
  transform-origin: 50% 0 0
  transform: scale(1, 0)
  width: 25%
  z-index: -1
  &.alpha
    animation-delay: .2s
    left: 0
  &.beta
    left: 25%
  &.gamma
    animation-delay: .12s
    left: 50%
  &.delta
    animation-delay: .23s
    left: 75%

h1
  animation-delay: 1s
  animation-duration: .3s
  animation-fill-mode: forwards
  animation-name: animateTitle
  animation-timing-function: ease
  color: $color-primary
  font-size: 18px
  font-weight: 700
  text-transform: uppercase
  transform: translate3d(0, -1.75em, 0)
  @media (min-width: $screen-large)
    font-size: 24px
  @media (min-width: $screen-xlarge)
    font-size: 30px

h2
  animation-delay: 1.35s
  animation-duration: .6s
  animation-fill-mode: forwards
  animation-name: animateTitle
  animation-timing-function: ease
  font-size: 26px
  font-weight: 900
  margin-top: 0
  max-width: 500px
  transform: translate3d(0, -6em, 0)
  @media (min-width: $screen-medium)
    font-size: 36px
    max-width: 75%
  @media (min-width: $screen-large)
    font-size: 42px
    max-width: 60%
  @media (min-width: $screen-xlarge)
    font-size: 46px
    max-width: 50%

.social-list
  list-style: none
  margin: 40px 0 0
  padding: 0
  @media (min-width: $screen-large)
    margin: 20px 0 0

.social-item
  margin: 0 0 10px 0
  @media (min-width: $screen-medium)
    display: inline-block
    margin: 0 20px 0 0
    &:last-child
      margin: 0
  &:nth-child(1) a
    animation-delay: 1.50s
  &:nth-child(2) a
    animation-delay: 1.65s
  &:nth-child(3) a
    animation-delay: 1.80s
  &:nth-child(4) a
    animation-delay: 1.95s
  a
    animation-duration: .5s
    animation-fill-mode: forwards
    animation-name: animateLink
    animation-timing-function: ease-in
    color: $color-tint
    display: inline-block
    font-size: 16px
    font-weight: 700
    text-decoration: none
    text-transform: uppercase
    position: relative
    transform: translate3d(0, -1.75em, 0)
    @media (min-width: $screen-medium)
      font-size: 20px
    &:hover
      color: lighten($color-tint, 30%)
      transition: color .15s linear

.word-wrap
  overflow: hidden
