{
  "build": "public",
  "port": "8008",
  "jade": {
    "views": {
      "base": "views",
      "src": "views/**/*.jade",
      "open": "index.html"
    }
  },
  "scripts": {
    "project": {
      "src": "assets/scripts/main.js",
      "watch": "assets/scripts/**/*.js",
      "out": "main.js",
      "lint": "assets/scripts/**/*.js"
    },
    "dest": "public/js"
  },
  "styles": {
    "project": {
      "src": "assets/styles/*.styl",
      "watch": "assets/styles/**/*",
      "dest": "public/css",
      "out": "main.css",
      "browsers": ["last 5 versions"]
    },
    "vendor": {
      "src": [
        "bower_components/normalize.styl/normalize.styl"
      ],
      "dest": "assets/styles/vendor"
    }
  },
  "images": {
    "src": "assets/images/**/*",
    "dest": "public/images"
  },
  "cname": {
    "src": "./CNAME",
    "dest": "public/"
  }
}
